<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_navigation"
    >
    <!--TODO
  @Ionut modify backgroud colors for buttons-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/tech"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#f0eb79"
                android:foreground="?attr/selectableItemBackground"
                android:drawableTop="@drawable/it"
                android:paddingTop="25dp"
                android:text="Technology"
                android:textAllCaps="false"

                android:textSize="18sp" />


            <Button
                android:id="@+id/sports"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#524d47"
                android:foreground="?attr/selectableItemBackground"
                android:drawableTop="@drawable/sports"
                android:paddingTop="25dp"
                android:text="Sports"
                android:textAllCaps="false"


                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/movies"
                android:layout_width="0dp"
                android:foreground="?attr/selectableItemBackground"
                android:layout_height="200dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#e7595d"
                android:drawableLeft="@drawable/movies"
                android:paddingLeft="45dp"
                android:text="Movies"
                android:textAllCaps="false"


                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/general"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#88a6db"
                android:drawableTop="@drawable/general"
                android:foreground="?attr/selectableItemBackground"
                android:paddingTop="25dp"
                android:text="General Knowledge"
                android:textAllCaps="false"

                android:textSize="18sp" />

            <Button
                android:id="@+id/science"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#80e7a9"
                android:drawableTop="@drawable/science"
                android:paddingTop="25dp"
                android:text="Science"
                android:textAllCaps="false"


                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/arts"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_margin="2dp"
                android:foreground="?attr/selectableItemBackground"
                android:layout_weight="1"
                android:background="#d9dbd0"
                android:drawableTop="@drawable/art"
                android:paddingTop="40dp"
                android:text="Arts"
                android:textAllCaps="false"

                android:textSize="18sp" />


            <Button
                android:id="@+id/books"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:foreground="?attr/selectableItemBackground"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#cc8d66"
                android:drawableTop="@drawable/books"
                android:paddingTop="25dp"
                android:text="Books"
                android:textAllCaps="false"

                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/maths"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#63c28c"
                android:drawableLeft="@drawable/maths"
                android:paddingLeft="35dp"
                android:foreground="?attr/selectableItemBackground"
                android:text="Mathematics"
                android:textAllCaps="false"


                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/geo"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#FA8072"
                android:drawableTop="@drawable/geo"
                android:foreground="?attr/selectableItemBackground"
                android:paddingTop="25dp"
                android:text="Geography"
                android:textAllCaps="false"
                 />


            <Button
                android:id="@+id/music"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#88a6db"
                android:drawableTop="@drawable/music"
                android:paddingTop="25dp"
                android:text="Music"
                android:foreground="?attr/selectableItemBackground"
                android:textAllCaps="false"
                 />
        </LinearLayout>


    </LinearLayout>
</ScrollView>